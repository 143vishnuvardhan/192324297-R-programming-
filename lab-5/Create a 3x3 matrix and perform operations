matrix1 <- matrix(1:9, nrow = 3, byrow = TRUE)
matrix2 <- matrix(9:1, nrow = 3, byrow = TRUE)
add <- matrix1 + matrix2
subtract <- matrix1 - matrix2
multiply <- matrix1 * matrix2
add
subtract
multiply



even_numbers <- seq(52, by = 2, length.out = 15)  
array_5x3 <- matrix(even_numbers, nrow = 5, ncol = 3, byrow = TRUE)
print("The 5x3 array of even integers greater than 50:")
print(array_5x3)

#output
[1] "The 5x3 array of even integers greater than 50:"
     [,1] [,2] [,3]
[1,]   52   54   56
[2,]   58   60   62
[3,]   64   66   68
[4,]   70   72   74
[5,]   76   78   80
